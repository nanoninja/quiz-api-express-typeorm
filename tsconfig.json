{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2017",
         "ESNext.AsyncIterable"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "removeComments": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noImplicitReturns": true
   },
   "exclude": ["node_modules"]
}